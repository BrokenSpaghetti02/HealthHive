# HealthHive Backend Environment Variables
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=HealthHive API
APP_VERSION=1.0.0
DEBUG=False

# Database
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=healthhive

# For MongoDB Atlas (production):
# MONGODB_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,https://yourdomain.com

# Philippines Data Privacy Act Compliance
DATA_RETENTION_YEARS=5
ENABLE_AUDIT_LOGGING=True
ENABLE_DATA_ENCRYPTION=True

# Sync Settings
SYNC_BATCH_SIZE=100
SYNC_RETRY_ATTEMPTS=3

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000
